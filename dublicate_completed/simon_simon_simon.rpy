label dct_simon:
    scene dct_int_coaching_room2 with blinds
    $ day_time ()
    $ persistent.sprite_time = "day"
    $ save_name = u"Дубликат.\nСёмка, Сёмка, Сёмочка -\nПредисловие"
    play ambience ambience_int_cabin_day
    play sound sfx_knock_door7_polite
    $ renpy.pause (2)
    me "Открыто!"
    show dv normal pioneer with MoveTransition(1.5, enter=_moveleft, enter_time_warp=_ease_time_warp)
    me "Алиса…"
    show un normal pioneer at cleft with MoveTransition(1.2, enter=_moveleft, enter_time_warp=_ease_time_warp)
    me "И Лена."
    th "Господи, только бы они не поссорились."
    me "Что-то случилось, девчонки?"
    dv "Доброе утро, Сень. Тут такое дело…"
    show dv guilty pioneer with dspr
    dv "В общем, мы с Ленкой ходили вас с Ульяной спасать."
    dv "И потерялись."
    me "Да наслышан уже. Спасибо, девочки."
    dv "Сенька, не мешай."
    dv "А пока вас искали, нашли папку с документами."
    show dv shy pioneer with dspr
    dv "Семён, мы{w=1}… Мы…"
    dv "Ленка, говори ты."
    show un serious pioneer with dspr
    un "Семён."
    un "Мы в неё заглянули. Чтобы понять, что там внутри. И почитали."
    dv "Совсем чуть-чуть."
    dv "Сенька, в общем, там про вас с Ульяной."
    hide dv with easeoutleft
    un "Семён, она ваша. Вот, возьми."
    hide un with moveoutleft
    
    scene dct_ext_switchman_house_day
    $ prolog_time ()
    $ persistent.sprite_time = "day"
    show dct_dream_veil:
        shiver
    with pixellate
    play music music_list["lightness_radio_bus"]
    th "Значит, этот сон я видел не просто так…"
    show d_us normal dress at center behind dct_dream_veil with moveinright:
        ypos -0.05
    d_u1 "Привет, ты Семён? Я Ульяна."
    $ renpy.pause (3)
    show blink
    stop music fadeout 1
    $ renpy.pause (2)
    
    scene black with dissolve
    play music tenderness
    show headline_text u"Сёмка, Сёмка, Сёмочка" at truecenter with dspr
    pause
    hide headline_text with dissolve
    
    show text(u"{size=48}{color=#ffdd7d}{i}Сочтены мои ночи…{/i}{/color}{/size}") at right with dspr
    pause
    hide text with dissolve
    stop music fadeout 1
    
            
